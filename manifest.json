{
  "manifest_version": 2,
  "name": "Force Youtube Theme Refresh",
  "version": "1.0.5",
  "description": "Forces the Youtube theme refresh for most Youtube pages",
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://*.youtube.com/watch?*",
    "*://*.youtube.com/*/player?*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "48": "icon.png",
    "96": "icon@2x.png"
  }
}
